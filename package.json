{
  "name": "fandou",
  "version": "0.1.0",
  "scripts": {
    "front:build": "webpack",
    "front:dev": "webpack-dev-server --host 0.0.0.0",
    "back:dev": "NODE_ENV=test pm2 start back-end/app.js --watch --name=kfan-dev",
    "back:exit": "pm2 stop kfan-dev --watch 0 && pm2 delete kfan-dev",
    "test": "xo"
  },
  "repository": "git@github.com:fanfoujs/fandou.git",
  "authors": [
    "LitoMore <litomore@gmail.com>",
    "Sheldon <hey@nowtiny.com>"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "ava": "^1.0.0-rc.2",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "css-loader": "^2.0.0",
    "deep-keys": "^0.5.0",
    "eslint": "^5.3.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "pm2": "^3.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "style-loader": "^0.23.0",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "fanfou-sdk": "^2.6.1",
    "koa": "^2.6.2",
    "koa-body": "^4.0.0",
    "koa-router": "^7.3.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "node",
      "browser"
    ],
    "extends": [
      "xo/esnext",
      "xo-react"
    ],
    "rules": {
      "camelcase": 0,
      "import/no-unresolved": 0,
      "import/no-unassigned-import": [
        2,
        {
          "allow": [
            "**/style/*.css",
            "**/*.css"
          ]
        }
      ]
    },
    "semicolon": false,
    "space": 2
  },
  "react": {
    "version": "16.x"
  }
}
