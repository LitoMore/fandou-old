{
  "name": "fandou",
  "version": "0.1.0",
  "scripts": {
    "front:build": "webpack",
    "front:dev": "webpack-dev-server",
    "back:dev": "NODE_ENV=test pm2 start back-end/app.js --watch --name=kfan-dev",
    "back:exit": "pm2 stop kfan-dev --watch 0 && pm2 delete kfan-dev",
    "test": "xo"
  },
  "repository": "git@github.com:fanfoujs/fandou.git",
  "authors": [
    "LitoMore <litomore@gmail.com>",
    "Sheldon <hey@nowtiny.com>"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.36",
    "@babel/preset-env": "^7.0.0-beta.36",
    "@babel/preset-react": "^7.0.0-beta.36",
    "ava": "^0.25.0",
    "babel-loader": "^8.0.0-beta.0",
    "css-loader": "^0.28.7",
    "deep-keys": "^0.5.0",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.6.0",
    "pm2": "^2.9.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "style-loader": "^0.20.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "xo": "^0.20.0"
  },
  "dependencies": {
    "fanfou-sdk": "^2.6.1",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-router": "^7.3.0"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "extends": [
      "xo-react"
    ],
    "rules": {
      "camelcase": 0,
      "import/no-unresolved": 0,
      "import/no-unassigned-import": [
        2,
        {
          "allow": [
            "**/style/*.css"
          ]
        }
      ]
    },
    "semicolon": false,
    "space": 2
  }
}
